parametersSchema:
    todo_by: structure([
        nonIgnorable: bool()
        referenceTime: string()
    ])

# default parameters
parameters:
    todo_by:
        nonIgnorable: true
        referenceTime: "now"

services:
    -
        class: staabm\PHPStanTodoBy\TodoByDateRule
        tags: [phpstan.rules.rule]
        arguments:
            - %todo_by.nonIgnorable%
            - %todo_by.referenceTime%
